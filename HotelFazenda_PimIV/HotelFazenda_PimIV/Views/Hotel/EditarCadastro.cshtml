@{
    ViewBag.Title = "Editar Cadastro";
    Business.Pagina pagina = ViewBag.Pagina;
}

<h2>Editar Cadastro</h2>

<div>
    <a href="/Consulta" class="btn btn-primary">Voltar</a>
</div>
<br />

<form action="/Consulta/@pagina.Id/AlterarCadastro" method="post">
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <label for="CPF">CPF:</label>
            <input type="text" class="form-control" id="cpf" name="CPF" value="@pagina.CPF" />
        </div>

        <div class="col-sm-6 col-md-4">
            <label for="nome">Nome Completo:</label>
            <input type="text" class="form-control" id="nome" name="nome" value="@pagina.Nome" />
        </div>

        <div class="col-sm-6 col-md-4">
            <label for="DataNascimento">Data de Nascimento:</label>
            <input type="text" class="form-control" id="nascimento" name="DataNascimento" value="@pagina.DataNascimento" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <label for="Sexo">Sexo:</label>
            <input type="text" class="form-control" id="Sexo" name="Sexo" value="@pagina.Sexo" />
        </div>

        <div class="col-sm-6 col-md-4">
            <label for="PossuiPcD">Possui PcD:</label>
            <input type="text" class="form-control" id="PossuiPcD" name="PossuiPcD" value="@pagina.PossuiPcD" />
        </div>

        <div class="col-sm-6 col-md-4">
            <label for="NumCelular">Número de celular:</label>
            <input type="text" class="form-control" id="telefone" name="NumCelular" value="@pagina.NumCelular" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <label for="Email">Email:</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@pagina.Email" />
        </div>
        <br />
        <div class="col-sm-6 col-md-4">
            <label for="CEP">CEP:</label>
            <input type="text" class="form-control" id="cep" name="CEP" value="@pagina.CEP" />
        </div>

        <div class="col-sm-6 col-md-4">
            <label for="NumCasa">Número da casa:</label>
            <input type="text" class="form-control" id="NumCasa" name="NumCasa" value="@pagina.NumCasa" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#telefone").inputmask("mask", { "mask": "(99) 99999-9999" });
            $("#cpf").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#cep").inputmask("mask", { "mask": "99999-999" });
            $("#nascimento").inputmask("mask", { "mask": "99/99/9999" });
        });
    </script>
}